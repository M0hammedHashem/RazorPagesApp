@page
@model EditModel
@{
}

<form method="post" >
    <input hidden asp-for="Category.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <div asp-validation-summary="ModelOnly"></div>
            <hr />
        </div>
        <div class="mb-3 row">
            @* <label>Name</label>
            <input class="form-control" type="text"/>
 *@
            <label asp-for="Category.Name"></label> 
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            @*  <label>Display Order</label>
            <input class="form-control" type="text" />
 *@
            <Label asp-for="Category.DisplayOrder"></Label>

            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Save</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/index" class="btn outline-secondary form-control">back to list</a>
            </div>

        </div>


    </div>

</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}